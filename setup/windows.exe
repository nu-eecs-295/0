# for manual Windows instructions see here - https://docs.python-guide.org/starting/install3/win/

# install Chocolatey
# ref - https://chocolatey.org/install#install-with-cmdexe
@"%SystemRoot%\System32\WindowsPowerShell\v1.0\powershell.exe" -NoProfile -InputFormat None -ExecutionPolicy Bypass -Command "iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))" && SET "PATH=%PATH%;%ALLUSERSPROFILE%\chocolatey\bin"

choco install python

# install `pip`
python -m pip install -U pip

# install Visual Studio Code
# installation options and more details here - https://chocolatey.org/packages/vscode
choco install vscode

